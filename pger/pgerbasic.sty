\newcommand{\smalllogo}{%
	\includegraphics[height=\hlogoheight]{\pgerlogo}%
}

\newcommand{\largelogo}{%
	\includegraphics[height=\hlogoheight*2]{\pgerlogo}%
}

\newcommand{\headerlogo}{%
	\smalllogo%
	\vspace{\hlogospace}%
}

\newcommand{\titlelogo}{%
	\largelogo%
	\vspace{\hlogospace}%
}

