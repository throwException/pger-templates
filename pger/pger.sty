\newcounter{xn}
\newcounter{xnn}[xn]
\newcounter{xnnn}[xnn]
\newcounter{xnnnn}[xnnn]

\newcommand{\N}[2]{%
	\vspace{0.2cm}
	\refstepcounter{xn}%
	\hangcmd{\textbf{\arabic{xn}.}}{\textbf{#1} \par #2} \needspace{0.5cm}
}

\newcommand{\NN}[2]{%
	\vspace{0.2cm}
	\refstepcounter{xnn}%
	\hangcmd{\textbf{\arabic{xn}.\arabic{xnn}.}}{\textbf{#1} \par #2} \needspace{0.5cm}
}

\newcommand{\NNN}[2]{%
	\vspace{0.2cm}
	\refstepcounter{xnnn}%
	\hangcmd{\textbf{\arabic{xn}.\arabic{xnn}.\arabic{xnnn}.}}{#1 \par #2} \needspace{0.5cm}
}

