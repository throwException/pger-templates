\RequirePackage{tabularx}
\KOMAoptions{DIV=15}
\setcounter{secnumdepth}{-1}

\newcommand{\art}[2]
{
	\vspace{0.2cm}
	\begin{tabular}{ p{2cm} p{1cm} p{13cm} }
	\textbf{Art. #1} & \multicolumn{2}{l}{\textbf{#2}} \\
	\end{tabular}
	
	\nopagebreak
	
}

\newcommand{\abs}[2]
{
	\begin{tabular}{ p{2cm} p{1cm} p{13cm} }
	#1 & \multicolumn{2}{p{14cm}}{#2} \\
	\end{tabular}
	
	
	
}

\newcommand{\lit}[2]
{
	\begin{tabular}{ p{2cm} p{1cm} p{12.5cm} }
	& #1. & #2 \\
	\end{tabular}
	
	
	
}

\newcommand{\refart}[1]{Art. #1}
\newcommand{\refabs}[2]{Art. #1 Abs. #2}
\newcommand{\reflit}[3]{Art. #1 Abs. #2 Lit. #3}
\newcommand{\removed}
{
	\iflanguage{ngerman}{\tiny \textit{aufgehoben}}
	
	\iflanguage{french}{\tiny \textit{abrogée}}
}
\newcommand{\uber}[1]{$^{\textnormal{\tiny #1}}$}
\newcommand{\uberlarge}[1]{$^{\textnormal{\scriptsize #1}}$}
